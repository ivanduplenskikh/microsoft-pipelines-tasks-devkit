{
  "name": "pipelines-tasks-devkit",
  "displayName": "Microsoft Pipelines Tasks Dev Kit",
  "description": "Dev Kit for Azure DevOps pipelines tasks",
  "version": "1.0.1",
  "publisher": "VladyslavHorbachov",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeftTwixWand/microsoft-pipelines-tasks-devkit"
  },
  "license": "MIT",
  "icon": "assets/azure-devops.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "pipelines",
    "Azure DevOps",
    "tasks",
    "Azure",
    "DevOps"
  ],
  "homepage": "https://github.com/LeftTwixWand/microsoft-pipelines-tasks-devkit",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aptd",
          "title": "Tasks Dev Kit",
          "icon": "$(azure-devops)"
        }
      ]
    },
    "views": {
      "aptd": [
        {
          "id": "aptd.tasks",
          "name": "Tasks list",
          "when": "aptd.isCompleted",
          "type": "tree"
        },
        {
          "id": "aptd.settings",
          "name": "Settings",
          "icon": "$(settings-gear)",
          "when": "!aptd.isCompleted",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "aptd.settings",
        "contents": "ðŸ‘‹ Welcome to Azure Pipelines Tasks Debugger!",
        "group": "welcome"
      },
      {
        "view": "aptd.settings",
        "contents": "Easily inspect, debug, and interact with Azure Pipelines Tasks â€” all within VS Code.",
        "group": "welcome"
      },
      {
        "view": "aptd.settings",
        "contents": "Get started by connecting to your Azure DevOps organization.",
        "group": "welcome"
      },
      {
        "view": "aptd.settings",
        "contents": "[Connect to an organization](command:aptd.connectToOrganization)",
        "group": "welcome",
        "when": "!aptd.isAuthorized"
      },
      {
        "view": "aptd.settings",
        "contents": "[Switch organization](command:aptd.switchOrganization)",
        "group": "welcome",
        "when": "aptd.isAuthorized"
      },
      {
        "view": "aptd.settings",
        "contents": "[Logout from Azure DevOps](command:aptd.logout)",
        "group": "welcome",
        "when": "aptd.isAuthorized"
      },
      {
        "view": "aptd.settings",
        "contents": "Now you can create Azure Pipelines Tasks folder structure.",
        "group": "welcome",
        "when": "aptd.isAuthorized && !aptd.hasTasksFolderStructure"
      },
      {
        "view": "aptd.settings",
        "contents": "[Open folder](command:vscode.openFolder)",
        "group": "welcome",
        "when": "aptd.isAuthorized && !aptd.hasTasksFolderStructure"
      },
      {
        "view": "aptd.settings",
        "contents": "You've opened the Azure Pipelines Tasks folder. You can now explore, work, and debug freely.",
        "group": "welcome",
        "when": "aptd.isAuthorized && aptd.hasTasksFolderStructure"
      },
      {
        "view": "aptd.settings",
        "contents": "[Let's go](command:aptd.letsGo)",
        "group": "welcome",
        "when": "aptd.isAuthorized && aptd.hasTasksFolderStructure"
      }
    ],
    "authentication": [
      {
        "id": "azuredevopspat",
        "label": "Azure DevOps PAT"
      },
      {
        "id": "azuredevopsoauth",
        "label": "Azure DevOps"
      }
    ],
    "commands": [
      {
        "command": "aptd.build",
        "title": "Build",
        "icon": "$(git-stash)"
      },
      {
        "command": "aptd.test",
        "title": "Test",
        "icon": "$(beaker)"
      },
      {
        "command": "aptd.deploy",
        "title": "Deploy",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "aptd.openSettings",
        "title": "Settings",
        "icon": "$(debug-configure)"
      },
      {
        "command": "aptd.connectToOrganization",
        "title": "Login to Azure DevOps",
        "icon": "$(sign-in)"
      },
      {
        "command": "aptd.switchOrganization",
        "title": "Switch organization",
        "icon": "$(sign-out)"
      },
      {
        "command": "aptd.logout",
        "title": "Logout from Azure DevOps",
        "icon": "$(sign-out)"
      },
      {
        "command": "aptd.openTheTaskInFolderStructure",
        "title": "Open the task in folder structure"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aptd.build",
          "when": "view == aptd.tasks",
          "group": "navigation@1"
        },
        {
          "command": "aptd.test",
          "when": "view == aptd.tasks",
          "group": "navigation@2"
        },
        {
          "command": "aptd.deploy",
          "when": "view == aptd.tasks",
          "group": "navigation@3"
        },
        {
          "command": "aptd.openSettings",
          "when": "view == aptd.tasks",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "aptd.openTheTaskInFolderStructure",
          "when": "viewItem == taskItem",
          "group": "navigation-task-item-context"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "azure-devops-node-api": "^14.1.0",
    "undici": "^7.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.15.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
